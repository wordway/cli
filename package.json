{
  "name": "wordway-cli",
  "version": "1.0.0",
  "description": "Command-line Interface (CLI) for Wordway",
  "main": "lib/index.js",
  "repository": "git@github.com:wordway/wordway-cli.git",
  "author": "JianyingLi <lijy91@foxmail.com>",
  "license": "MIT",
  "bin": {
    "wordway": "bin/wordway"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "start": "tsc --build && ./bin/wordway",
    "build": "yarn clean && tsc --build && npm uninstall -g wordway-cli && npm install -g .",
    "lint": "node_modules/.bin/eslint src/ --ext .ts",
    "test": "node_modules/.bin/jest"
  },
  "dependencies": {
    "@types/node": "^12.6.8",
    "axios": "^0.19.0",
    "axios-logger": "^2.1.0",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "inquirer": "^6.5.0",
    "isomorphic-fetch": "^2.2.1",
    "markdown-toc": "^1.2.0",
    "uuid": "^3.1.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jest": "^22.4.1",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "lib"
    ]
  }
}
